extends ../template

include ../mixins/goods-slider

block variables
  - var title = 'Избранное'
  - var breadrumbs = 1

block content
  section.fav.margin-section
    .container
      h1.h1title Избранное
      .fav__empty 
        .fav__col
          p.fav__text В избранном пока ничего нет
          a.fav__link.btn-background(href="#") Выбрать матрас
